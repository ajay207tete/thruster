# Production Environment Variables
NODE_ENV=production
PORT=5002

# Database - MongoDB Atlas (Production)
MONGODB_URI=mongodb+srv://cyberpunk_user:secure_password@cluster.mongodb.net/cyberpunk_app?retryWrites=true&w=majority

# Security - JWT Secret (256-bit key)
JWT_SECRET=your-super-secure-production-jwt-secret-key-256-bit-minimum-length-for-security

# CORS - Production Domain
CORS_ORIGIN=https://yourdomain.com

# Amadeus API (Travel Bookings)
AMADEUS_CLIENT_ID=your_production_amadeus_client_id
AMADEUS_CLIENT_SECRET=your_production_amadeus_client_secret

# TON Connect Manifest
TON_MANIFEST_URL=https://yourdomain.com/tonconnect-manifest.json

# Monitoring & Error Tracking
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SSL Configuration
SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/cyberpunk-server.log

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Performance Settings
CONNECTION_POOL_SIZE=10
QUERY_TIMEOUT_MS=30000
CACHE_TTL_SECONDS=300
