{
  "expo": {
    "name": "Thruster App",
    "slug": "thruster-app",
    "version": "1.0.0",
    "sdkVersion": "53.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "main": "index.js",
    "web": {
      "bundler": "metro",
      "output": "static",
      "name": "Thruster App",
      "shortName": "Thruster",
      "lang": "en",
      "scope": "/app",
      "themeColor": "#000000",
      "description": "Cyberpunk themed e-commerce and travel app",
      "dir": "ltr",
      "display": "standalone",
      "startUrl": "/app",
      "orientation": "portrait",
      "backgroundColor": "#000000",
      "public": "./public"
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      },
      "EXPO_PUBLIC_API_BASE_URL": "https://thruster-api.netlify.app",
      "EXPO_PUBLIC_TON_MANIFEST_URL": "https://thruster-api.netlify.app/.netlify/functions/tonconnect-manifest"
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
